{
  "name": "@settlemint/solidity-empty",
  "version": "4.0.0",
  "description": "An empty solidity project",
  "scripts": {
    "lint": "pnpm solhint 'contracts/**/*.sol'",
    "compile": "pnpm hardhat compile",
    "test": "pnpm hardhat test",
    "test:typecheck": "pnpm hardhat test --typecheck",
    "smartcontract:deploy": "pnpm hardhat deploy --network ${DEFAULT_NODE}",
    "smartcontract:deploy:reset": "pnpm hardhat deploy --network ${DEFAULT_NODE} --reset",
    "graph:all": "pnpm graph:config && pnpm graph:compile && pnpm graph:fix && pnpm graph:codegen && pnpm graph:build && pnpm graph:deploy",
    "graph:config": "pnpm hardhat graph:config --network ${DEFAULT_NODE}",
    "graph:compile": "pnpm graph-compiler --config subgraph.config.json --include node_modules/@openzeppelin/subgraphs/src/datasources subgraph/datasources --export-schema --export-subgraph",
    "graph:fix": "node scripts/fix-graph-manifest.ts generated/solidity-empty.subgraph.yaml",
    "graph:codegen": "pnpm graph codegen generated/solidity-empty.subgraph.yaml",
    "graph:build": "pnpm graph build generated/solidity-empty.subgraph.yaml",
    "graph:deploy": "/bin/bash -c 'eval \"$(shdotenv -e ./.secrets/env)\"; if [ \"$MIDDLEWARE\" == \"\" ]; then echo \"You have not launched a graph middleware for this smart contract set, aborting...\"; exit 1; fi; graph create --node ${MIDDLEWARE} ${SCS}; graph deploy --version-label v1.0.$(date +%s) --node ${MIDDLEWARE} --ipfs ${MIDDLEWARE_IPFS} ${SCS} generated/solidity-empty.subgraph.yaml'"
  },
  "author": "SettleMint <hello@settlemint.com>",
  "license": "SEE LICENSE IN LICENSE.md",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "2.0.2",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@0.3.0-beta.13",
    "@nomiclabs/hardhat-solhint": "3.0.0",
    "@typechain/ethers-v5": "10.2.0",
    "@types/chai": "4.3.4",
    "@types/js-yaml": "4.0.5",
    "@types/lodash": "4.14.192",
    "@types/mocha": "10.0.1",
    "@types/node": "18.15.11",
    "@typescript-eslint/eslint-plugin": "5.57.1",
    "@typescript-eslint/parser": "5.57.1",
    "chai": "4.3.7",
    "eslint": "8.37.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.1.1",
    "ethers": "5.7.2",
    "form-data": "4.0.0",
    "hardhat": "2.13.0",
    "hardhat-abi-exporter": "2.10.1",
    "hardhat-deploy": "0.11.25",
    "hardhat-log-remover": "2.0.2",
    "prettier": "2.8.7",
    "prettier-plugin-solidity": "1.1.3",
    "solhint": "3.4.1",
    "solhint-plugin-prettier": "0.0.5",
    "ts-generator": "0.1.1",
    "ts-node": "10.9.1",
    "typechain": "8.1.1",
    "typescript": "4.9.5",
    "yaml": "2.2.1"
  },
  "dependencies": {
    "@amxx/graphprotocol-utils": "1.1.0",
    "@graphprotocol/graph-cli": "0.45.0",
    "@graphprotocol/graph-ts": "0.29.3",
    "@openzeppelin/contracts": "4.8.2",
    "@openzeppelin/contracts-upgradeable": "4.8.2",
    "@openzeppelin/subgraphs": "0.1.8-5",
    "chalk": "4.1.2",
    "image-size": "1.0.2",
    "ipfs-http-client": "56.0.3",
    "it-all": "2.0.1",
    "js-yaml": "4.1.0",
    "keccak256": "1.0.6",
    "lodash": "4.17.21",
    "merkletreejs": "0.3.9",
    "nft.storage": "7.0.3",
    "uint8arrays": "4.0.3"
  },
  "resolutions": {
    "colors": "1.4.0",
    "@web-std/fetch": "4.1.0"
  }
}
